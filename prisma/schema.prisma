

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
}

model Movie {
  id Int @id @default(autoincrement())
  title String @unique
  previewUrl String 
  thumbnailUrl String
  description String 
  rating Decimal 
  releaseYear Int
  durationInMinutes Int
}